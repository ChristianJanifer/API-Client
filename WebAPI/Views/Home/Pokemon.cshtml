@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutBaru";
}

<!-- POKEMON API -->
<div class="text-center">
    <div class="text-black">
        <h2>Pokemon</h2>
    </div>
</div>

<p></p>

<div class="container">
    <table id="tablePokemon" class="table table-striped  table-sm">
        <thead class="thead-light">
            <tr>
                <th>No</th>
                <th>Nama Pokemon</th>
                <th>Url</th>
                <th>Spesifikasi</th>
            </tr>
        </thead>
        <tbody id="listpokemon"></tbody>
    </table>
</div>

<!-- POKEMON API -->
<!-- The Modal -->
<div class="modal fade" id="modalSW">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Spesifikasi Pokemon</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <table class="table p-1" style="margin-top: 200px;">
                    <thead class="thead-light">
                        <tr>
                            <th>Nama Pokemon</th>
                            <th>Skill</th>
                            <th>Gerak</th>
                            <th>Tipe</th>
                            <th>Height</th>
                            <th>Weight</th>
                        </tr>
                    </thead>
                    <tbody id="listSW"></tbody>
                </table>
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>











